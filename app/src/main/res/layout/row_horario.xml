<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/txDiaSemana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_materia"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/txSiglaHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_materia"
            app:layout_constraintTop_toBottomOf="@+id/txDiaSemana"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/txHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/horaio"
            app:layout_constraintTop_toBottomOf="@+id/txSiglaHorario"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>